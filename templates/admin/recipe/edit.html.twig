{% extends 'admin/admin.html.twig' %}

{% block title %} Édition de la recette :  {{ recipe.id }} {% endblock %}

{% block body %} 
    <h1>Éditer une recette</h1> <br>
    {{ form_start(form) }}
        <div class="row d-flex">
            <div class="col-4">{{ form_row(form.title) }}</div>
            <div class="col-4">{{ form_row(form.slug) }}</div>
            <div class="col-4">{{ form_row(form.duration) }}</div>
        </div>
        {{ form_rest(form) }}
    {{ form_end(form) }}
{% endblock %}